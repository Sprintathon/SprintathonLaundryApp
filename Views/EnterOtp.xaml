<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SprintathonLaundryApp.Views.EnterOtp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:SprintathonLaundryApp.ViewModels"
    Title="EnterOtp"
    x:DataType="viewmodel:EnterOtpViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto">

        <Image Grid.Row="0" Source="forgot_password.png" />

        <VerticalStackLayout Grid.Row="1">


            <Label
                HorizontalOptions="Center"
                Text="Enter Otp"
                VerticalOptions="Center" />
            <Button Command="{Binding NavigateToNewPassswordCommand}" Text="Enter New Password" />

        </VerticalStackLayout>


    </Grid>
</ContentPage>