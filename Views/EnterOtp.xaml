<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SprintathonLaundryApp.Views.EnterOtp"
             xmlns:viewmodel="clr-namespace:SprintathonLaundryApp.ViewModels"
             x:DataType="viewmodel:EnterOtpViewModel"
             Title="EnterOtp">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*">

            <Image 
                Grid.Row="0"
               Source="enter_otp.png"
            />
            <VerticalStackLayout
                
            Grid.Row="1"
                >

                <Label 
            Text="Enter Otp"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <Button 
            Text="Enter New Password"
            Command="{Binding NavigateToNewPassswordCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>