<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SprintathonLaundryApp.Views.OrderSummaryView"
             xmlns:viewmodel="clr-namespace:SprintathonLaundryApp.ViewModels"
             x:DataType="viewmodel:OrderSummaryViewModel"
             Title="OrderSummaryView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Order Summary"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            IsEnabled="{Binding IsNotBusy}"
            Command="{Binding NavigateToOrderHistoryCommand}"/>
    </VerticalStackLayout>
</ContentPage>
