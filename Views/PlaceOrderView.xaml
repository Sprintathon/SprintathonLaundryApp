<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SprintathonLaundryApp.Views.PlaceOrderView"
             xmlns:viewmodel="clr-namespace:SprintathonLaundryApp.ViewModels"
             x:DataType="viewmodel:PlaceOrderViewModel"
             Title="Place Order">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Place Order View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Order Summary"
            IsEnabled="{Binding IsNotBusy}"
            Command="{Binding NavigateToOrderSummaryCommand}"/>
    </VerticalStackLayout>
</ContentPage>
